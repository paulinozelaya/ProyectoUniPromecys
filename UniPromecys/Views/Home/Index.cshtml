@{
    ViewData["Title"] = "Home Page";
}

<div id="carousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Assets/images/imagen01.jpg" class="d-block w-100" alt="Imagen 1">
        </div>
        <div class="carousel-item">
            <img src="~/Assets/images/imagen02.jpg" class="d-block w-100" alt="Imagen 2">
        </div>
        <div class="carousel-item">
            <img src="~/Assets/images/imagen03.jpg" class="d-block w-100" alt="Imagen 3">
        </div>
        <div class="carousel-item">
            <img src="~/Assets/images/imagen04.jpg" class="d-block w-100" alt="Imagen 4">
        </div>
        <div class="carousel-item">
            <img src="~/Assets/images/imagen05.jpg" class="d-block w-100" alt="Imagen 5">
        </div>
        <div class="carousel-item">
            <img src="~/Assets/images/imagen06.jpg" class="d-block w-100" alt="Imagen 6">
        </div>
    </div>
    <!-- Controles del carrusel -->
    <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Anterior</span>
    </a>
    <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Siguiente</span>
    </a>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $('.carousel').carousel({
                interval: 2000 // Cambiar cada 3 segundos (puedes ajustar el tiempo)
            });
        })
    </script>
}
